{
    "compilerOptions": {
      "target": "es2020", // версия, в которую комплилируется TS код
      "lib": ["es2020", "DOM", "DOM.Iterable", "WebWorker"], // типы, которые будет поддерживать компилятор
      "allowJs": true,
      "skipLibCheck": true, // при сборке не проверяет типы из библиотек
      "esModuleInterop": true, // обеспечивает совместимость с CommonJS и ES6 модулями, добавляя вспомогательные функции для импорта (изменяет генерируемый код)
      "allowSyntheticDefaultImports": true, // позволяет импортировать модули без дефолтного экспорта (не изменяет генерируемый код)
      "strict": true, // строгая проверка типов
      "forceConsistentCasingInFileNames": true, // требует, чтобы регистр имени файла совпадал с регистром имени импорта
      "moduleResolution": "bundler", // стратегия разрешения модулей (определяет как TS будет искать и подключать модули)
      "resolveJsonModule": true, // позволяет импортировать JSON файлы как модули
      "declaration": true,
      "emitDeclarationOnly": true,
      "declarationMap": true,
      "importsNotUsedAsValues": "remove",
      "sourceMap": true,
      "incremental": true,
      "removeComments": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "module": "ESNext",
      "outDir": "./build-ts",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        // разрешение кастомных импортов из vite.config (ts будет их понимать)
        "@/*": ["*"],
        "@app/*": ["./app/*"],
        "@pages/*": ["./pages/*"],
        "@widgets/*": ["./widgets/*"],
        "@features/*": ["./features/*"],
        "@entities/*": ["./entities/*"],
        "@shared/*": ["./shared/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
  }