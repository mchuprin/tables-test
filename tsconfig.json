{
    "compilerOptions": {
      "target": "es2020", // версия, в которую комплилируется TS код
      "lib": ["es2020", "DOM", "DOM.Iterable", "WebWorker"], // типы, которые будет поддерживать компилятор
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true, // строгая проверка типов
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "module": "ESNext",
      "declaration": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@app/*": ["./app/*"],
        "@pages/*": ["./pages/*"],
        "@widgets/*": ["./widgets/*"],
        "@features/*": ["./features/*"],
        "@entities/*": ["./entities/*"],
        "@shared/*": ["./shared/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ]
  }