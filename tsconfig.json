// tsconfig.json
{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["DOM", "DOM.Iterable", "ES6"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "module": "ESNext",
      "declaration": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@app/*": ["app/*"],
        "@pages/*": ["pages/*"],
        "@widgets/*": ["widgets/*"],
        "@features/*": ["features/*"],
        "@entities/*": ["entities/*"],
        "@shared/*": ["shared/*"]
      }
    },
    "include": [
      "src/**/*",
      "eslint.config.js"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ]
  }